<script>
  let selectedStars = 0;
  let totalStars = 0;
  let totalReviews = 0;

  document.querySelectorAll('.star').forEach(star => {
    star.style.transition = 'transform 0.2s ease';
    star.addEventListener('click', () => {
      selectedStars = parseInt(star.getAttribute('data-value'));
      star.style.transform = 'scale(1.3)';
      setTimeout(() => { star.style.transform = 'scale(1)'; }, 150);
      updateStars();
    });
  });

  function updateStars() {
    document.querySelectorAll('.star').forEach(star => {
      let value = parseInt(star.getAttribute('data-value'));
      star.style.color = value <= selectedStars ? 'red' : '#aaa';
    });
  }

  function submitReview() {
    let text = document.getElementById('reviewText').value;
    if (!text.trim()) return;

    let reviewList = document.getElementById('reviewList');
    let item = document.createElement('div');
    item.style.padding = '10px';
    item.style.marginBottom = '10px';
    item.style.background = 'white';
    item.style.borderRadius = '8px';
    item.style.boxShadow = '0 2px 6px rgba(0,0,0,0.1)';
    item.style.display = 'flex';
    item.style.gap = '10px';

    let avatar = document.createElement('div');
    avatar.style.width = '40px';
    avatar.style.height = '40px';
    avatar.style.borderRadius = '50%';
    avatar.style.background = '#ccc';
    avatar.style.display = 'flex';
    avatar.style.justifyContent = 'center';
    avatar.style.alignItems = 'center';
    avatar.style.fontWeight = 'bold';
    avatar.style.fontSize = '1rem';
    avatar.innerText = text.trim()[0].toUpperCase();

    let content = document.createElement('div');
    content.innerHTML = `<div style='color:red; font-size:1.2rem;'>${'‚òÖ'.repeat(selectedStars)}${'‚òÜ'.repeat(5-selectedStars)}</div><p style='font-size:0.9rem;'>${text}</p>`;

    item.appendChild(avatar);
    item.appendChild(content);

    reviewList.prepend(item);

    totalStars += selectedStars;
    totalReviews++;
    updateAverage();

    document.getElementById('reviewText').value = '';
    selectedStars = 0;
    updateStars();
  }

  function updateAverage() {
    let avg = (totalStars / totalReviews).toFixed(1);
    document.getElementById('averageRating').innerHTML = `Average Rating: ${avg} / 5 ‚≠ê`;
  }
</script>

